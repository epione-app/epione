{
  "name": "epione-cordova",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service cordova-prepare",
    "test": "npm run test:unit",
    "build-android": "vue-cli-service cordova-build-android",
    "build-browser": "vue-cli-service cordova-build-browser",
    "serve-android": "vue-cli-service cordova-serve-android",
    "serve-browser": "vue-cli-service cordova-serve-browser",
    "test:unit": "vue-cli-service test:unit --coverage"
  },
  "dependencies": {
    "@babel/polyfill": "^7.4.4",
    "@fortawesome/fontawesome-free": "^5.8.2",
    "core-js": "^2.6.5",
    "firebase": "^6.1.0",
    "register-service-worker": "^1.6.2",
    "roboto-fontface": "^0.10.0",
    "vue": "^2.6.10",
    "vue-router": "^3.0.3",
    "vuefire": "^2.0.0",
    "vuetify": "^1.5.14",
    "vuex": "^3.0.1",
    "vuexfire": "^3.0.0"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.8.0",
    "@vue/cli-plugin-pwa": "^3.8.0",
    "@vue/cli-plugin-unit-jest": "^3.8.0",
    "@vue/cli-service": "^3.8.0",
    "@vue/test-utils": "1.0.0-beta.29",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "^24.8.0",
    "jest": "^24.8.0",
    "vue-cli-plugin-cordova": "^2.1.3",
    "vue-jest": "^3.0.4",
    "vue-template-compiler": "^2.6.10"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*{js,vue}", 
      "!**/*{config.js}",
      "!**/node_modules/**", 
      "!**/src-cordova/**",
      "!**/src/assets/**",
      "!**/src/plugins/**"
    ],
    "moduleNameMapper": {
      "^vue$": "vue/dist/vue.common.js",
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "vue",
      "jsx"
    ],
    "transform": {
      ".*\\.(vue)$": "vue-jest",
      "^.+\\.vue$": "vue-jest",
      ".+\\.(css|styl|less|sass|scss|svg|png|jpg|ttf|woff|woff2)$": "jest-transform-stub",
      "^.+\\.jsx?$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/"
    ],
    "snapshotSerializers": [
      "jest-serializer-vue"
    ],
    "testMatch": [
      "**/tests/unit/**/*.spec.(js|jsx|ts|tsx)|**/__tests__/*.(js|jsx|ts|tsx)"
    ],
    "testURL": "http://localhost/",
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ]
  }
}
